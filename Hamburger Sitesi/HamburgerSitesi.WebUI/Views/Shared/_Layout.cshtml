@using HamburgerSitesi.WebUI.Extensions;
<html>
<head>
	<title>Hamburger Proje Sitesi</title>

	<meta name="description" content="Yzl8146 Sınıfı için yapılan MVC web projesi">
	<meta name="keywords" content="HTML, CSS, JavaScript, Jquery, MVC, .Net, Asp.Net, BilgeAdam">
	<meta name="author" content="Bahriye Başer">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<style>
	label.required:after {
		content: "*\00a0";
		color: red;
		margin-left: 2px;
	}
</style>

<header class="p-3 text-bg-dark">
	<div class="container">
		<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
			<a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
				<svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
			</a>

			<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
				
				
				<li><a asp-controller ="Home" asp-action="Index" class="nav-link px-2 text-white">ANASAYFA</a></li>
				<li><a href="#" class="nav-link px-2 text-white">KURUMSAL</a></li>
				<li><a asp-controller="Menu" asp-action="Menu" class="nav-link px-2 text-white">MENÜ</a></li>
				<li><a href="#" class="nav-link px-2 text-white">GALERİ</a></li>
				<li><a href="#" class="nav-link px-2 text-white">ŞUBELER</a></li>
			</ul>

			<div class="text-end">
				<a asp-controller="Odeme" asp-action="Odeme" class="btn btn-info">ONLİNE SİPARİŞ</a>


				<div class="d-none" id="login">
					<partial name="_LoginPartial" model="new LoginViewModel()">
				</div>
				@if (!User.IsLogged())
					
				{
					<div id="welcome">
						<partial name="_WelcomePartial">
					</div>

				}
				else
				{
					var firstName = User.GetUserFirstName();
					var lastName = User.GetUserLastName();
					<div class="d-flex">

						<div class="mt-2">
							HOŞGELDİN @firstName @lastName
						</div>
						@if (User.IsAdmin())
						{
							<div class="ms-3">
								<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-danger">Yönetim Paneli</a>
							</div>
						}
						<a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-warning ms-3">Çıkış Yap</a>


					</div>
				<div class="alert alert-danger text-center">
					Oturum açıldı
				</div>
				}

			</div>
		</div>
	</div>
</header>
<body class="d-flex flex-column min-vh-100">
	<div class="container">
		@RenderBody()
	</div>
	<footer class="py-3 my-4">
		<ul class="nav justify-content-center border-bottom pb-3 mb-3">
			<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">ANASAYFA</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">KURUMSAL</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">MENÜ</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">GALERİ</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">ŞUBELER</a></li>

		</ul>
		<p class="text-center text-body-secondary">© 2023 Çankaya/ANKARA</p>
	</footer>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script>
		$('#btnGirisYap').click(function () {
			$('#login').removeClass('d-none');
			$('#welcome').addClass('d-none');
		})
		$('#btnIptal').click(function () {
			$('#login').addClass('d-none');
			$('#welcome').removeClass('d-none');
		})
	</script>
</body>
</html>
